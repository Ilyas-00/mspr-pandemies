# docker/Dockerfile.api
FROM python:3.12-slim
WORKDIR /app
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
COPY . .
EXPOSE 8000
CMD ["uvicorn","api.api_pandemies:app","--host","0.0.0.0","--port","8000","--workers","2"]
